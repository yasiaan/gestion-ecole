{% extends 'base.html.twig' %}

{% block title %}INSEA{% endblock %}

{% block body %}

<div class="card rounded border-success m-2 mx-auto" style="max-width: 55rem">
    {% if app.user == null %}
    <h1 class="text-center text-success m-5">Inscription</h1>
    {% else %}
    <h1 class="text-center text-success m-5">l'ajout d'un étudiant</h1>
    {% endif %}
    {{ form_start(form_etudiant, {'attr': {'class': 'text-success m-5'}}) }}
        <p class="lead text-dark">Informations personnelles</p>
        <hr class="my-4">
        {{ form_row(form_etudiant.nom, {'attr': {'placeholder': 'Entrer votre nom ...', 'autofocus': ''}}) }}    
        {{ form_row(form_etudiant.prenom, {'attr': {'placeholder': 'Entrer votre prénom ...'}}) }}    
        {{ form_row(form_etudiant.dateNaissAt, {'attr': {'label': 'Date de naissance'}})}}    
        {{ form_row(form_etudiant.cne, {'label': 'Code national d\'étudiant', 'attr': {'placeholder': 'Entrer votre CNE ...'}}) }}    
        {{ form_row(form_etudiant.cin, {'label': 'Code d\'identité national', 'attr': {'placeholder': 'Entrer votre CIN ...'}}) }}    
        {{ form_row(form_etudiant.nomComplet_pere, {'label': 'Nom complet du père', 'attr': {'placeholder': 'Entrer le nom de votre père ...'}}) }}    
        {{ form_row(form_etudiant.tel_pere, {'label': 'Numéro de téléphone du père', 'attr': {'placeholder': 'Entrer le numéro de téléphone de votre père ...'}}) }}
        <hr class="my-4"> 
        <p class="lead text-dark">Informations académique</p>
        <hr class="my-4"> 
        {{ form_row(form_etudiant.cycle) }}
        {{ form_row(form_etudiant.filiere) }}
        {{ form_row(form_etudiant.niveau) }}
        <div class="form-group col text-center">
        {% if app.user == null %}
            <button type="submit" class="btn btn-outline-success rounded">Enregistrer</button>
            <button type="submit" class="btn btn-outline-danger rounded">Annuler</button>
        {% else %}
            <button type="submit" class="btn btn-outline-success rounded">Ajouter</button>
            <button type="submit" class="btn btn-outline-danger rounded">Annuler</button>
        {% endif %}
        </div>

    {{ form_end(form_etudiant) }}
</div>
{% endblock %}
