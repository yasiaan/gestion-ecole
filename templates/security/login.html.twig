{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}


    <div class="card rounded border-success m-5 mx-auto" style="max-width: 30rem">
        <div class="card-body m-2">
            <h1 class="text-center text-success ">Connexion</h1>
            <form action="{{ path('security_login') }}" method="post" class="m-4">
                <div class="input-group form-group">
                    <input type="text" name="_username" class="form-control rounded" placeholder="Adresse e-mail" required autofocus>
                </div>
                <div class="input-group form-group">            
                    <input type="password" name="_password" class="form-control rounded" placeholder="Mot de passe" required>
                </div>
                <div class="form-group col text-center">
                    <button type="submit" class="btn btn-outline-success rounded">S'identifier</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
